<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vilderlee.eshopinventory.dao.UserDao">

    <resultMap id="getUserInfoResultMap" type="com.vilderlee.eshopinventory.dto.User">
        <result property="id" column="id"></result>
        <result property="username" column="username"></result>

        <result property="age" column="age"></result>
    </resultMap>

    <select id="getUserById" parameterType="long" resultMap="getUserInfoResultMap">
        select * from user where id = #{id}
    </select>


    <select id="getAll" resultMap="getUserInfoResultMap">
        select * from user
    </select>
</mapper>